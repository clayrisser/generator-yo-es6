{
  "name": "<%= name %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "keywords": ["yeoman-generator", "generator", "yo", "yeoman"],
  "main": "generators/app/index.js",
  "files": ["generators"],
  "scripts": {
    "build": "npm run test && babel src -d generators",
    "clean": "rimraf demo generators/*/*.js",
    "ejslint": "ejslint $(find generators -type f)",
    "format": "prettier --write ./src/**/*.js",
    "link": "npm link && npm link <%= name %>",
    "lint": "npm run format && npm run ejslint && eslint ./",
    "lint:fix": "npm run format && npm run ejslint && eslint --fix ./",
    "prepublish": "npm run clean && npm run build",
    "start": "npm run clean && npm run build && yo --destination=demo <%= name.substr(10) %>",
    "test": "npm run lint",
    "unlink": "npm unlink <%= name %>"
  },
  "dependencies": {
    "generator-github-project": "^0.2.8",
    "idempotent-babel-polyfill": "^7.0.0",
    "lodash": "^4.17.11",
    "yeoman-generator": "^1.0.0",
    "yo-base-prompts": "^0.1.6",
    "yo-option-or-prompt": "^0.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-preset-everything": "^0.1.2",
    "ejs-lint": "^0.3.0",
    "eslint": "^5.6.1",
    "eslint-config-jam": "^0.1.6",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "yo": "^2.0.5"
  },
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>",
    "url": "<%= authorUrl %>"
  },
  "homepage": "<%= homepage %>",
  "license": "<%= license %>",
  "repository": "<%= repository %>",
  "eslintIgnore": ["generators", "demo"]
}
